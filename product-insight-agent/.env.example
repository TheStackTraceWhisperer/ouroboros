# Environment variables for Product Insight Agent

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=ProductInsightAgent/1.0

# Target subreddit for data collection
REDDIT_SUBREDDIT=OurAppCommunity

# LLM Configuration
# Choose your preferred LLM provider
LLM_PROVIDER=anthropic  # Options: anthropic, google

# Anthropic (Claude) Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Google (Gemini) Configuration  
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-1.5-flash

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ouroboros
DATABASE_SCHEMA=product_insights

# Scheduling Configuration
SCHEDULE_ENABLED=true
REPORT_SCHEDULE_TIME=09:00  # Daily report generation time (24h format)

# Application Settings
LOG_LEVEL=INFO
MAX_POSTS_PER_RUN=100
DAYS_TO_ANALYZE=1

# Storage paths (for local development)
DATA_DIR=./data
REPORTS_DIR=./reports